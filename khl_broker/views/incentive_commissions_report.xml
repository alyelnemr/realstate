<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_incentive_commission_report_tree" model="ir.ui.view">
            <field name="name">view.incentive.commission.report.tree</field>
            <field name="model">sales.commissions.incentives</field>
            <field name="arch" type="xml">
                <tree string="Incentive Report" create="0" delete="1" edit="1"
                      duplicate="0" editable="bottom">
                    <field name="name" readonly="1" string="Type"/>
                    <field name="employee_id" readonly="1" options="{'no_create': True, 'no_open': True}"/>
                    <field name="job_id" readonly="1" options="{'no_create': True, 'no_open': True}"/>
                    <field name="contract_no" readonly="1" string="Contract No."/>
                    <field name="unit_id" readonly="1" options="{'no_create': True, 'no_open': True}"/>
                    <field name="unit_amount" readonly="1" string="Company Commission" sum="total"/>
                    <field name="incentive_value" readonly="1" sum="total"/>
                    <field name="to_pay_amount"  sum="total" attrs="{'readonly':[('paid','=','full')]}"/>
                    <field name="paid_amount"  sum="total" readonly="1"/>
                    <field name="remaing_amount"  sum="total"/>
                    <field name="due_date" string="Commission Due Date"/>
                    <field name="make_payroll"/>
                    <field name="paid" readonly="1"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>

        <record id="view_incentive_commission_report_tree_inherit" model="ir.ui.view">
            <field name="name">view_incentive_commission_report_tree_inherit</field>
            <field name="model">sales.commissions.incentives</field>
            <field name="inherit_id" ref="khl_broker.view_incentive_commission_report_tree"/>
            <field name="groups_id" eval="[(4, ref('khl_broker.group_see_own_reports'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='to_pay_amount']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='make_payroll']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='notes']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='due_date']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_sales_person_commission_report_graph">
            <field name="name">Incentive Report</field>
            <field name="model">sales.commissions.incentives</field>
            <field name="arch" type="xml">
                <graph string="Broker Request Graph">
                    <field name="employee_id" type="row"/>
                    <field name="incentive_value" type="measure"/>
                </graph>
            </field>
        </record>

        <record model="ir.ui.view" id="view_sales_person_commission_report_pivot">
            <field name="name">Incentive Report</field>
            <field name="model">sales.commissions.incentives</field>
            <field name="arch" type="xml">
                <pivot string="Sales Person Commissions Report" disable_linking="True">
                    <field name="employee_id" type="row"/>
                    <field name="incentive_value" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_incentive_report_search" model="ir.ui.view">
            <field name="name">sales.incentive.report.search</field>
            <field name="model">sales.commissions.incentives</field>
            <field name="arch" type="xml">
                <search string="Bouns Report">
                    <field name="name" readonly="1" string="Type"/>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="broker_request_id" string="Contract No."/>
                    <field name="unit_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="employee_id" context="{'group_by': 'employee_id'}"/>
                        <filter string="Contract" name="broker_request_id" context="{'group_by': 'broker_request_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_incentive_report_view" model="ir.actions.act_window">
            <field name="name">Incentive Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sales.commissions.incentives</field>
            <field name="view_id" ref="view_incentive_commission_report_tree"/>
            <field name="domain">[('type','=','incentive')]</field>
            <field name="view_mode">tree,form,graph,pivot</field>
        </record>
    </data>
</odoo>